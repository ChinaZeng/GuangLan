<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/shape_work_order_item_bg"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="光缆段序号:xxxxxxx" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="3dp"
        android:background="@color/colorDivider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_gl_d_num"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="光缆段名称:xxxxx" />

        <TextView
            android:id="@+id/tv_gl_d_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_gl_d_num"
            android:singleLine="true"
            tools:text="光缆段编码:xxxxx" />


        <!--<TextView-->
        <!--android:id="@+id/tv_dl_name"-->
        <!--android:layout_width="170dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignLeft="@+id/tv_gl_d_num"-->
        <!--android:layout_below="@+id/tv_gl_d_num"-->
        <!--android:layout_marginTop="15dp"-->
        <!--android:singleLine="true"-->
        <!--tools:text="电缆名称:xxxxx" />-->


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/qianxin_test"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/color1"
            android:text="纤芯测试"
            android:textColor="#fff" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/qianxin_upload"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/color1"
            android:text="上传文件"
            android:textColor="#fff" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/qianxin_status"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/color1"
            android:text="端口状态"
            android:textColor="#fff" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="left|center|bottom"
        android:text="上次测试时间:2018-10-16"
        android:textSize="15sp" />


</LinearLayout>