<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/head_cslick"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="参数配置"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/head_click"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="20dp"
            android:text="展开"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2eded"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="测试距离" />

        <com.dl7.tag.TagLayout
            android:id="@+id/juli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tag_layout_mode="single_choice"
            app:tag_layout_shape="round_rect" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="测试波长" />

        <com.dl7.tag.TagLayout
            android:id="@+id/bochang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tag_layout_mode="single_choice"
            app:tag_layout_shape="round_rect" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="测试脉宽" />

        <com.dl7.tag.TagLayout
            android:id="@+id/maikuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tag_layout_mode="single_choice"
            app:tag_layout_shape="round_rect" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="测试时间" />

        <com.dl7.tag.TagLayout
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tag_layout_mode="single_choice"
            app:tag_layout_shape="round_rect" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="测试模式" />

        <com.dl7.tag.TagLayout
            android:id="@+id/mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tag_layout_mode="single_choice"
            app:tag_layout_shape="round_rect" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="折射率" />

        <com.dl7.tag.TagLayout
            android:id="@+id/zheshelv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tag_layout_mode="single_choice"
            app:tag_layout_shape="round_rect" />
    </LinearLayout>
</LinearLayout>